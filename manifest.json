{
  "manifest_version": 2,
  "name": "Simple Policy",
  "description": "Simple Policy breaks down companies' complex privacy policies into short summaries.",
  "version": "1.00",
  "icons": {
    "128": "images/simple-policy-128.png",
    "64": "images/simple-policy-64.png",
    "48": "images/simple-policy-48.png",
    "32": "images/simple-policy-32.png",
    "16": "images/simple-policy-16.png"
  },
  "browser_action": {
    "default_icon": "images/simple-policy-128.png",
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "tabs"
  ],
  "content_security_policy":"script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}